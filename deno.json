{
  "name": "@dreamer/socket-io",
  "version": "1.0.0-beta.8",
  "license": "MIT",
  "exports": {
    ".": "./src/mod.ts",
    "./client": "./src/client/mod.ts"
  },
  "publish": {
    "include": [
      "src/**/*.ts",
      "LICENSE.md",
      "README.md"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/test/**",
      "**/tests/**",
      "**/examples/**"
    ]
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "imports": {
    "@dreamer/logger": "jsr:@dreamer/logger@^1.0.0-beta.10",
    "@dreamer/runtime-adapter": "jsr:@dreamer/runtime-adapter@^1.0.0-beta.22",
    "@dreamer/test": "jsr:@dreamer/test@^1.0.0-beta.40",
    "@dreamer/crypto": "jsr:@dreamer/crypto@^1.0.0-beta.2",
    "mongodb": "npm:mongodb@^7.0.0",
    "redis": "npm:redis@^5.10.0"
  },
  "nodeModulesDir": "auto"
}
